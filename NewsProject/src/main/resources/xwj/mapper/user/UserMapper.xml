<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xwj.mapper.user.UserMapper">
<!--    插入user -->
    <insert id="insertUser">
        insert into users (userId, username, password)
        values (#{userId},#{username},#{password});
    </insert>
    <delete id="deleteUserById">
        delete
        from users
        where userId = #{userId};
    </delete>
    <!--    登录功能 -->
    <select id="selectUsernameAndPassword"
            resultType="xwj.bean.User">
        select username,userId
        from users where
        username=#{username} and password=#{password};
    </select>
<!--    检查用户名是否存在 -->
    <select id="selectUsername"
            resultType="xwj.bean.User">
        select username
        from users where username=#{username};
    </select>
    <select id="getByUserId" resultType="xwj.bean.User">
        select userId, username
        from users where userId = #{userID};
    </select>
    <select id="getAllUser" resultType="xwj.bean.User">
        select userId, username
        from users;
    </select>
</mapper>